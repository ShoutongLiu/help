<view class="detail">
    <view class="item">
        <text class="title">联系人姓名：</text>
        <text class="name">{{item_detail.name}}</text>
    </view>
    <view class="item">
        <text class="title">帮助类型：</text>
        <text class="type">{{item_detail.type}}</text>
    </view>
    <view class="item">
        <text class="title">需求内容：</text>
        <text class="content">{{item_detail.content}}</text>
    </view>
    <view class="item">
        <text class="title">联系地址：</text>
        <text class="address">{{item_detail.address}}</text>
    </view>
    <view class="item">
        <text class="title">帮助时间：</text>
        <text class="time">{{item_detail.help_time}}</text>
    </view>
    <view class="item">
        <text class="title">联系电话：</text>
        <text class="phone">{{item_detail.phone}}</text>
    </view>
    <view class="btn" bindtap="handleAccept">接受需求</view>
</view>