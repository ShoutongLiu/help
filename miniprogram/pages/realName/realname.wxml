<view class="real-name">
    <view class="card-font">
        <view class="img-box">
            <image class="img" src="{{cardFont}}" mode="aspectFill"></image>
        </view>
        <view class="upload-text">请上传身份证（国徽面）</view>
        <button class="upload-btn" bindtap="onChooseFont">上 传</button>
    </view>
    <view class="card-back">
        <view class="img-box">
            <image class="img" src="{{cardBack}}" mode="aspectFill"></image>
        </view>
        <view class="upload-text">请上传身份证（头像面）</view>
        <button class="upload-btn" bindtap="onChooseBack">上 传</button>
    </view>
    <view class="address">
        <view class="title">请选择常住地区:</view>
        <picker class="city" mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
            <view class="picker">
                {{region[0]}}{{region[1]}}{{region[2]}}
                <text class="iconfont icon-down"></text>
            </view>
        </picker>
        <view class="title">请输入详细地址:</view>
        <input type="text" class="address-detail" bindinput="handleGetAddress" placeholder="详细地址" />
    </view>
    <button class="upload-submit" bindtap="onSubmit">提 交</button>
</view>