@import '../../assets/iconfont.wxss';

.item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.item .num {
    font-size: 36rpx;
    margin-right: 20rpx;
    color: #00BFFF;
}

.item-info {
    flex: 1;
    display: flex;
    align-items: center;
}

.item-info .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 60rpx;
    border: 1rpx solid #00BFFF;
}

.item .comm {
    display: flex;
}

.item .comm .title {
    min-width: 180rpx;
}

.item .name .title,
.integral {
    font-weight: bold;
}


.item-info .need-info .time {
    margin: 10rpx 0;
}

.item-info .need-info .length {
    color: #00BFFF;
    font-size: 28rpx;
}

.item .integral {
    color: #00BFFF;
    font-size: 28rpx;
}


.item .type-item {
    width: 200rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #fff;
    background-color: #00BFFF;
    border-radius: 8rpx;
    text-align: center;
    font-size: 24rpx;
}


.item .contact {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.item .row {
    flex-direction: row;
}

.item .contact .icon-phone {
    font-size: 50rpx;
    font-weight: bold;
    color: #00BFFF;
}